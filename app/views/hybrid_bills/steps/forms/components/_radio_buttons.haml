.input-group__inline
  = f.radio_button attribute, true, value: true, checked: true, class: local_assigns.fetch(:yes_class, nil), data: local_assigns.fetch(:data_tag, nil)
  = f.label attribute, local_assigns.fetch(:yes_label, t('user_forms.yes_radio').capitalize), value: true
.input-group__inline
  = f.radio_button attribute, false, value: false, class: local_assigns.fetch(:no_class, nil), data: local_assigns.fetch(:data_tag, nil)
  = f.label attribute, local_assigns.fetch(:no_label, t('user_forms.no_radio').capitalize), value: false

- if f.object.errors[attribute].present?
  %p.message--error Please select one
