- page_title = title("#{t('hybrid_bills.terms-conditions.title').capitalize}. #{t('hybrid_bills.id' + @business_id + '.object_title')} #{t('hybrid_bills.hs2')} #{t('hybrid_bills.hs2_bill').capitalize}")

#content.hero.theme--grey-4{ tabindex: '0' }
  .container
    %h1
      %span= t('hybrid_bills.terms-conditions.title').capitalize
      %span.sr-only .
      %span.context= "#{t('hybrid_bills.id' + @business_id + '.object_title')} #{t('hybrid_bills.hs2')} #{t('hybrid_bills.hs2_bill').capitalize}"

    %h2.typography--light
      = "#{t('hybrid_bills.step_5').capitalize} #{t('hybrid_bills.step_1_5')}"

%section
  .container
    %h2= t('hybrid_bills.terms-conditions.personal_info').capitalize

    %p= t('hybrid_bills.terms-conditions.personal_info_a')

    %ul
      %li
        = t('hybrid_bills.terms-conditions.personal_info_b')
        = succeed " " do
          = link_to 'http://www.parliament.uk/about/how/laws/bills/private/office/', target: '_blank' do
            = t('hybrid_bills.terms-conditions.personal_info_c')
            %span.sr-only>
              = t('open_new_window_link')
        = t('hybrid_bills.terms-conditions.personal_info_d')
        = link_to 'http://www.parliament.uk/business/publications/parliamentary-archives/', target: '_blank' do
          = t('hybrid_bills.terms-conditions.personal_info_e')
          %span.sr-only>
            = t('open_new_window_link')

      %li
        = t('hybrid_bills.terms-conditions.personal_info_f')
        = succeed " " do
          = link_to 'https://www.gov.uk/government/organisations/department-for-transport', target: '_blank' do
            = t('hybrid_bills.terms-conditions.personal_info_g')
            %span.sr-only>
              = t('open_new_window_link')
        = t('hybrid_bills.terms-conditions.personal_info_h')
        = succeed " " do
          = link_to 'https://www.gov.uk/government/organisations/high-speed-two-limited', target: '_blank' do
            = t('hybrid_bills.terms-conditions.personal_info_i')
            %span.sr-only>
              = t('open_new_window_link')
        = t('hybrid_bills.terms-conditions.personal_info_j')

    %p= t('hybrid_bills.terms-conditions.personal_info_k')

    %p= t('hybrid_bills.terms-conditions.personal_info_l')

    %p= sanitize t('hybrid_bills.terms-conditions.personal_info_m')

%section
  .container
    %h2= t('hybrid_bills.terms-conditions.comms').capitalize

    %p= t('hybrid_bills.terms-conditions.comms_a')

    %p= t('hybrid_bills.terms-conditions.comms_b')

%section
  .container
    %h2= t('hybrid_bills.terms-conditions.consent').capitalize

    %p= t('hybrid_bills.terms-conditions.consent_a')

    %p= t('hybrid_bills.terms-conditions.consent_b')

    %br

    = form_tag hybrid_bill_path(@business_id, step: 'terms-conditions') do
      .block--border__bottom
        %fieldset
          %legend.sr-only Please confirm you agree to the terms and conditions
          = check_box_tag 'termsAccept', 'accepted', false, 'data-submit': 'disabled', 'aria-required': 'true', 'required': 'true'
          = label_tag 'termsAccept', t('user_forms.terms_conditions_accept').capitalize
          = hidden_field_tag 'hybrid_bill_terms[accepted]', true
      = submit_tag t('hybrid_bills.terms-conditions.send_petition_button').capitalize, class: 'btn--primary'

    %br
    .block.accent--mint
      %h3= t('hybrid_bills.help_support').capitalize
      %p
        = t('hybrid_bills.help_support_a')
        = link_to t('hybrid_bills.help_support_email'), "mailto:#{t('hybrid_bills.help_support_email')}"
        = t('hybrid_bills.help_support_b')
        = succeed "." do
          = link_to t('hybrid_bills.help_support_phone'), "tel:#{t('hybrid_bills.help_support_phone').gsub(/\s+/, "")}"
