- page_title = title("#{t('hybrid_bills.email.writing_petition').capitalize} #{t('hybrid_bills.hyphen')} #{t('hybrid_bills.organisation')}. #{t('hybrid_bills.object_to').capitalize} #{t('hybrid_bills.the')} #{t('hybrid_bills.hs2')} #{t('hybrid_bills.hs2_bill').capitalize}")

#content.hero.theme--grey-4{ tabindex: '0' }
  .container
    %h1
      = "#{t('hybrid_bills.email.writing_petition').capitalize} #{t('hybrid_bills.hyphen')} #{t('hybrid_bills.organisation')}"
      %span.sr-only .
      %span= "#{t('hybrid_bills.object_to').capitalize} #{t('hybrid_bills.the')} #{t('hybrid_bills.hs2')} #{t('hybrid_bills.hs2_bill').capitalize}"

    %h2.typography--light
      = "#{t('hybrid_bills.step_2').capitalize} #{t('hybrid_bills.step_1_2')}"

%section.section--primary
  .container
    %h2.sr-only
      = t('hybrid_bills.email.writing_petition_how').capitalize
    %p= t('hybrid_bills.email.writing_petition_how_a')
    %p= t('hybrid_bills.email.writing_petition_how_b')

    %h2= t('hybrid_bills.email.send_email').capitalize
    %p
      = t('hybrid_bills.email.send_email_a')
      = succeed "." do
        = link_to t('hybrid_bills.help_support_email'), "mailto:#{t('hybrid_bills.help_support_email')}"

    %h2= t('hybrid_bills.email.send_post').capitalize
    %p= t('hybrid_bills.email.send_post_a')

    %h2= t('hybrid_bills.email.send_person').capitalize
    %p
      = t('hybrid_bills.email.send_person_a')
      = link_to t('hybrid_bills.help_support_phone'), "tel:#{t('hybrid_bills.help_support_phone').gsub(/\s+/, "")}"
      = t('hybrid_bills.email.send_person_b')

    .section--major
      %ol.list--pipe__deep
        %li
          %figure.svg--icon.svg--file__word
            = render partial: 'pugin/icons/file'

          .list--details
            %h3= t('hybrid_bills.help_support_template').capitalize

            %a{ href: 'https://s3-eu-west-1.amazonaws.com/web1live.static-assets-public/_hybrid-bills/documents/HS2-Phase-2a-Petition-Pack-Organisation.doc', class: 'btn--primary' }
              = render partial: 'pugin/icons/download'
              = t('user_forms.word_download_button')

            %p
              = t('hybrid_bills.help_support_format')
              = link_to t('hybrid_bills.help_support_email'), "mailto:#{t('hybrid_bills.help_support_email')}"
              = t('hybrid_bills.help_support_b')
              = succeed "." do
                = link_to t('hybrid_bills.help_support_phone'), "tel:#{t('hybrid_bills.help_support_phone').gsub(/\s+/, "")}"

      %h2= t('hybrid_bills.email.bill_updates').capitalize
      %p
        = t('hybrid_bills.email.bill_updates_a')
        = succeed "." do
          = link_to 'http://www.parliament.uk/business/committees/committees-a-z/commons-select/high-speed-rail-west-midlands-crewe-bill-select-committee-commons', target: '_blank' do
            = "#{t('hybrid_bills.hs2_committee')} #{t('hybrid_bills.hs2_website')}"
            %span.sr-only>
              = t('open_new_window_link')
